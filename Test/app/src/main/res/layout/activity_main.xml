<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#4CAF50"
        android:gravity="center|clip_vertical|center_horizontal"
        android:text="@string/c_c_ki_u_l_p_tr_nh_s_ki_n"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s_a" />

        <EditText
            android:id="@+id/soa"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:hint="@string/vui_l_ng_nh_p"
            android:inputType="number"
            android:importantForAutofill="no" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s_b" />

        <EditText
            android:id="@+id/sob"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:hint="@string/vui_l_ng_nh_p"
            android:inputType="number"
            android:autofillHints="" />
    </LinearLayout>

    <TextView
        android:id="@+id/ketqua"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#4CAF50"
        android:gravity="center|clip_vertical|center_horizontal"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btntong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|clip_vertical|center_horizontal"
        android:text="@string/t_ng_2_s" />

    <Button
        android:id="@+id/btnhieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|clip_vertical|center_horizontal"
        android:text="@string/hi_2_s" />

    <Button
        android:id="@+id/btnnhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|clip_vertical|center_horizontal"
        android:text="@string/t_ch_2_s" />

    <Button
        android:id="@+id/btnchia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|clip_vertical|center_horizontal"
        android:text="@string/th_ng_2_s" />

    <Button
        android:id="@+id/btnucln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|clip_vertical|center_horizontal"
        android:text="@string/ucln" />

    <Button
        android:id="@+id/btnthoat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|clip_vertical|center_horizontal"
        android:text="@string/tho_t_ch_ng_tr_nh"
        android:textColor="#FF0000" />
</LinearLayout>